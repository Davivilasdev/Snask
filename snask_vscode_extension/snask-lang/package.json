{
  "name": "snask-lang",
  "displayName": "Snask",
  "description": "Language support for Snask",
  "publisher": "YourPublisherName",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.106.1"
  },
  "categories": [
    "Programming Languages"
  ],
  "main": "./dist/extension.js",
  "activationEvents": [
    "onLanguage:snask"
  ],
  "contributes": {
    "languages": [{
      "id": "snask",
      "aliases": ["Snask", "snask"],
      "extensions": [".snask"],
      "configuration": "./language-configuration.json"
    }],
    "grammars": [{
      "language": "snask",
      "scopeName": "source.snask",
      "path": "./syntaxes/snask.tmLanguage.json"
    }],
    "commands": [
      {
        "command": "snask-lang.runFile",
        "title": "Run Snask File"
      },
      {
        "command": "snask.explainCode",
        "title": "Snask: Explain Selected Code"
      },
      {
        "command": "snask-lang.compileFile",
        "title": "Snask: Compile File"
      }
    ],
    "configuration": {
      "title": "Snask",
      "properties": {
        "snask.executablePath": {
          "type": "string",
          "default": "",
          "description": "Path to the Snask executable (e.g., /path/to/executor/snask.exe). If not set, the extension will try to find it in the workspace's 'executor' directory."
        }
      }
    },
    "snippets": [
      {
        "language": "snask",
        "path": "./snippets/snask.json"
      }
    ],
    "iconThemes": [
      {
        "id": "snask-icon-theme",
        "label": "Snask File Icons",
        "path": "./icons/snask-icon-theme.json"
      }
    ],
    "menus": {
      "editor/context": [
        {
          "when": "editorHasSelection",
          "command": "snask.explainCode",
          "group": "navigation"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./"
  },
  "devDependencies": {
    "@types/vscode": "^1.106.1",
    "@types/node": "^18.11.18",
    "typescript": "^5.3.3"
  }
}
