{
	"$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
	"name": "Snask",
	"patterns": [
		{ "include": "#comments" },
		{ "include": "#keywords" },
		{ "include": "#types" },
		{ "include": "#operators" },
		{ "include": "#strings" },
		{ "include": "#numbers" },
		{ "include": "#booleans" },
		{ "include": "#functions" },
		{ "include": "#identifiers" }
	],
	"repository": {
		"comments": {
			"patterns": [{
				"name": "comment.line.double-slash.snask",
				"match": "//.*"
			}]
		},
		"keywords": {
			"patterns": [
				{
					"name": "keyword.control.snask",
					"match": "\\b(if|elif|else|while|for|in|return)\\b"
				},
				{
					"name": "keyword.declaration.snask",
					"match": "\\b(let|mut|const|fun)\\b"
				},
				{
					"name": "keyword.other.snask",
					"match": "\\b(print|input)\\b"
				}
			]
		},
		"types": {
			"patterns": [
				{
					"name": "storage.type.snask",
					"match": "\\b(int|float|str|bool|list|dict|void|any)\\b"
				}
			]
		},
		"operators": {
			"patterns": [
				{
					"name": "keyword.operator.arithmetic.snask",
					"match": "[\\+\\-\\*\\/]"
				},
				{
					"name": "keyword.operator.comparison.snask",
					"match": "==|!=|<=|>=|<|>"
				},
				{
					"name": "keyword.operator.assignment.snask",
					"match": "="
				},
				{
					"name": "punctuation.separator.snask",
					"match": "[\\(\\)\\{\\}\\[\\],\\.:;]"
				}
			]
		},
		"strings": {
			"name": "string.quoted.double.snask",
			"begin": "\"",
			"end": "\"",
			"patterns": [
				{
					"name": "constant.character.escape.snask",
					"match": "\\\\."
				}
			]
		},
		"numbers": {
			"name": "constant.numeric.snask",
			"match": "\\b\\d+(\\.\\d+)?\\b"
		},
		"booleans": {
			"name": "constant.language.boolean.snask",
			"match": "\\b(true|false)\\b"
		},
		"functions": {
			"patterns": [{
				"name": "entity.name.function.snask",
				"match": "\\b([a-zA-Z_][a-zA-Z0-9_]*)(?=\\()"
			}]
		},
		"identifiers": {
			"patterns": [{
				"name": "variable.other.snask",
				"match": "\\b[a-zA-Z_][a-zA-Z0-9_]*\\b"
			}]
		}
	},
	"scopeName": "source.snask"
}